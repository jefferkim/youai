<div class="reply">
    <a href="#" class="avatar"><img src="<%= avatar %>" width="48" height="48"/></a>
    <span class="author"><%= author %></span>
    <p class="comment"><%= content %></p>
    <div class="reply-btn"><a href="#" class="J-reply" data-id="<%= commentParentId %>">回复</a></div>
</div>
<% if(loopReply){ %>
<div class="loop-reply">
    <span class="loop-author"><%= loopReply.author %>：</span><%= loopReply.content %>
</div>
<% }%>

