<a href="#!album/<%= album.albumId %>/p1" class="collection-title">该宝贝所属专辑
  <span href="#"> “<%= album.description %>” </span>共 <%= album.items.length %> 件宝贝</a>

<div class="collection">
  <div class="main-view">
    <div class="big-pic"><img src="<%= images[0].url + '_500x450.jpg' %>" ></div>
    <div class="item-info">
      <p class="price">￥<%= (originalPrice / 100).toFixed(2) %></p>
      <p class="comment-count"><strong><%= commentNum %></strong><span></span></p>
      <p class="like-count">
        <% if (parseInt(likeNum) > 0) { %><strong><%= likeNum %></strong><% } %>
        <span class="<%= like == 'true' ?  'liked' : '' %>"></span></p>
    </div>
  </div>
  <% if (album.items.length) { %>
  <div class="collection-items">
    <span class="up-arrow"></span>
    <span class="down-arrow"></span>
    <div class="vslide">
      <ul>
        <% for (var i = 0; i < album.items.length; i++) { %>
          <li data-index="<%= i %>">
            <img class="lazy" src="http://a.tbcdn.cn/mw/base/styles/component/more/images/Loading_Taobao_320.gif"
            data-src="<%= album.items[i].images[0].url + '_110x110.jpg' %>" >
          </li>
        <% } %>
      </ul>
    </div>
  </div>
  <% } %>
</div>

<header>
  <h1><a class="isv" href="<%= isvInfo.url %>">
    来自<span class="isv-name"><%= isvInfo.name %></span></a>
    <span class="description"><%= description %></span></h1>
</header>
<div class="go-buy"><a href="#" ><span></span>去购买</a></div>
<div class="separator"></div>


<% if (tags && tags.length) { %>
<section class="recommendations">
  <header>
    <h1>相关推荐</h1>
  </header>
  <ul class="keywords">
    <% for (var i = 0; i < Math.ceil(tags.length / 5); i++) { %>
    <li>
      <% for (var j = i * 5; j < Math.min(tags.length, (i+1)*5 ); j++) { %>
        <a href="#"><%= tags[j].name %></a>
      <% } %>
    </li>
    <% } %>
